@model IEnumerable<Project>

@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Projects</h2>
        <ol class="breadcrumb">
            <li class="active">
                <a href="@Url.Action("Index", "Project")">Home</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

    @foreach (var project in Model)
    {
        <div class="col-lg-4">
            
            <div class="widget lazur-bg p-xl" style="background-color:@project.Color;cursor:pointer;" onclick="toDetails(@project.ID)">
                    <h2 class="font-bold">
                        @project.Title
                    </h2>
                    <ul class="list-unstyled m-t-md">
                        <li>
                            <span class="fa fa-bookmark m-r-xs"></span>
                            <label>Description:</label>
                            @project.Description
                        </li>
                        <li>
                            <span class="fa fa-tasks m-r-xs"></span>
                            <label>Tasks:</label>
                            @project.Tasks.Count()
                        </li>
                        <li>
                            <span class="fa fa-star m-r-xs"></span>
                            <label>Status:</label>
                            @project.Status
                        </li>
                    </ul>
            </div>
        </div>
    }
</div>

<script type="text/javascript">

    function toDetails(id)
    {
        window.location = "@Url.Action("Details")" + "/" + id;
    }
</script>